<%= form_for [@course, @lesson] do |f|%>

    <%= render 'shared/error_messages', object: f.object %>

    <%=f.label :name%>
    <%=f.text_field :name%>

    <%=f.label :description%>
    <%=f.text_area :description%>

    <%= f.submit @lesson.id.blank? ? "Создать новый урок" : "Редактировать урок", class: "btn btn-large btn-primary" %>

<% end %>