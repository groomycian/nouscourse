<%= form_for [timetable.lesson, timetable], html: { class: "form-horizontal center", role: "form" }, remote: true do |f|%>
    <div class="form-group">
        <%=f.label :date, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
            <%= f.text_field :date, class: "form-control", readonly: 'readonly', 'data-behaviour' => 'datepicker' %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Создать новое время урока", class: "btn btn-default btn-primary" %>
        </div>
    </div>
<% end %>