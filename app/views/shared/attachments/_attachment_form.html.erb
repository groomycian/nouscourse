<%= form_for [attachment.lesson, attachment], html: {:target => 'attachment-frame', multipart: true,  class: "form-horizontal center", role: "form" } do |f|%>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
        <%=f.label :file, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
            <%= f.file_field :file, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Загрузить файл", class: "btn btn-default btn-primary" %>
        </div>
    </div>
    <iframe id='attachment-frame' name="attachment-frame" style="width:1px;height:1px;border:0px" src="about:blank"></iframe>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
<% end %>