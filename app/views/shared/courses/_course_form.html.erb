<%= form_for @course, html: { class: "form-horizontal center", role: "form" } do |f|%>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="form-group">
        <%=f.label :name, class: "col-sm-2 control-label"%>
        <div class="col-sm-10">
            <%=f.text_field :name, class: "form-control"%>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit @course.id.blank? ? "Создать новый курс" : "Редактировать курс", class: "btn btn-large btn-primary" %>
        </div>
    </div>
<% end %>